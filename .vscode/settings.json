{
  "yaml.schemas": {
    "schemas/requirements.schema.json": "requirements_and_plans/requirements/*.yaml"
  },
  "json.schemas": [
    {
      "fileMatch": [
        "/requirements_and_plans/requirements/**/*.json",
        "!/requirements_and_plans/requirements/dir.*"
      ],
      "url": "/schemas/requirements.schema.json"
    },
    {
      "fileMatch": ["/requirements_and_plans/requirements/dir.json"],
      "url": "/schemas/dir.schema.json"
    },
    {
      "fileMatch": [
        "/requirements_and_plans/study_plans/**/*.json",
        "/requirements_and_plans/plans/**/*.json"
      ],
      "url": "/schemas/plan.schema.json"
    }
  ]
}
