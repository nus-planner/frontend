{
  "yaml.schemas": {
    "locals/schemas/requirements.schema.json": "locals/requirements/*.yaml"
  },
  "json.schemas": [
    {
      "fileMatch": [
        "/locals/requirements/**/*.json",
        "!/locals/requirements/dir.*"
      ],
      "url": "/locals/schemas/requirements.schema.json"
    },
    {
      "fileMatch": ["/locals/requirements/dir.json"],
      "url": "/locals/schemas/dir.schema.json"
    },
    {
      "fileMatch": ["/locals/study-plans/**/*.json", "/locals/plans/**/*.json"],
      "url": "/locals/schemas/plan.schema.json"
    }
  ]
}
